{
  "paths": {
    "pictures_dir": "../../Pictures",
    "output_dir": "Output_pictures",
    "config_dir": "Output_pictures/config",
    "segments_dir": "Output_pictures/Segments",
    "segments_grid_dir": "Output_pictures/Segments/SegmentsGrid",
    "segments_overlap_dir": "Output_pictures/Segments/SegmentsOverlap",
    "dot_viz_dir": "Output_pictures/Segments/Segment_dot_visualizations",
    "number_viz_dir": "Output_pictures/number_visualizations",
    "number_debug_dir": "Output_pictures/number_debug"
  },
  "filenames": {
    "detected_circles": "detected_circles.json",
    "detected_numbers": "detected_numbers.json",
    "global_dots": "global_dot_coordinates.json",
    "global_numbers": "global_numbers.json",
    "pairing": "pairing.json",
    "grid_segments_meta": "grid_segments.json",
    "overlap_segments_meta": "overlap_segments.json",
    "main_with_dots": "Output_pictures/main_image_with_dots.jpg",
    "main_with_numbers": "Output_pictures/main_image_with_numbers.jpg",
    "pairing_viz": "Output_pictures/pairing_visualization.jpg",
    "merged_result": "merged_result.jpg"
  },
  "segmentation": {
    "grid_cols": 5,
    "overlap_cols": 4,
    "overlap_x": 0.6,
    "overlap_y": 0.6
  },
  "circle_detection": {
    "dot_blur_kernel": 21,
    "adaptive_blockSize": 11,
    "adaptive_C": 15,
    "blob_detector": {
      "filterByArea": true,
      "minArea": 10,
      "maxArea": 250,
      "filterByCircularity": true,
      "minCircularity": 0.6,
      "filterByConvexity": true,
      "minConvexity": 0.8,
      "filterByInertia": true,
      "minInertiaRatio": 0.6
    },
    "duplicate_threshold": 12,
    "intensity_std_multiplier": 20
  },
  "number_detection": {
    "tesseract_path": "C:\\Program Files\\Tesseract-OCR\\tesseract.exe",
    "use_easyocr": true,
    "easyocr_gpu": true,
    "use_paddleocr": true,

    "number_search_roi_radius": 15,
    "refined_ocr_padding": 5,

    "full_image_blur_kernel": 51,
    "full_image_adaptive_blockSize": 7,
    "full_image_adaptive_C": 15,

    "min_confidence_threshold": 60,
    "neighbor_check_tolerance": 3
  }
}